{
    "workbench.colorTheme": "organic-green-theme",
    "editor.fontSize": 16,
    "files.watcherExclude": {
        "**/.bloop": true,
        "**/.metals": true,
        "**/.ammonite": true
    },
    "editor.cursorBlinking": "solid",
    "editor.cursorWidth": 20,
    "editor.emptySelectionClipboard": false,
    "workbench.editor.enablePreview": false,
    "editor.bracketPairColorization.enabled": true,
    "editor.guides.bracketPairs": false,
    "workbench.colorCustomizations": {
        "editorBracketHighlight.foreground1": "#666666",
        "editorBracketHighlight.foreground2": "#5544EE",
        "editorBracketHighlight.foreground3": "#2265DC",
        "editorBracketHighlight.foreground4": "#00A89B",
        "editorBracketHighlight.foreground5": "#229900",
        "editorBracketHighlight.foreground6": "#999900",
        "editorBracketHighlight.unexpectedBracket.foreground": "#db6165"
    },
    "latex-workshop.message.update.show": false,
    "highlightwords.colors": [
        { "light": "#FFF68F", "dark": "cyan" },
        { "light": "#B7EB8F", "dark": "pink" },
        { "light": "#76DDBA", "dark": "lightgreen" },
        { "light": "#91D5FF", "dark": "magenta" },
        { "light": "#ADC6FF", "dark": "cornflowerblue" },
        { "light": "#D3ADF7", "dark": "orange" },
        { "light": "#FFADD2", "dark": "green" },
        { "light": "#FFA39E", "dark": "red" },
        { "light": "#FFD591", "dark": "white" }
    ],
    "highlightwords.box": {
        "light": false,
        "dark": true
    },
    // 0=default,
    // 1=whole word,
    // 2=ignore case,
    // 3=whole word and ignore case
    "highlightwords.defaultMode": {
        "default": 1
    },
    "highlightwords.showSidebar": {
        "default": true
    },
    "editor.suggestSelection": "first",
    "vsintellicode.modify.editor.suggestSelection": "automaticallyOverrodeDefaultValue",
    "editor.rulers": [
        80
    ],
    "window.titleBarStyle": "custom",
    // Allow to detect encoding from contents in the file
    "files.autoGuessEncoding": true,
    // Do not auto save files
    "files.autoSave": "off",
    // Set plain text copy
    "editor.copyWithSyntaxHighlighting": false,
    "editor.fontFamily": "'Fira Mono Medium', 'Droid Sans Mono', 'monospace', monospace, 'Droid Sans Fallback'",
    "workbench.editorAssociations": {
        "*.ipynb": "jupyter-notebook"
    },
    "window.customMenuBarAltFocus": false,
    // Do not search text under cursor. Search the same text searched last time.
    "editor.find.seedSearchStringFromSelection": "never",
    // --------------------
    // Center Editor Window
    // Enable toggling between centering the current line center, moving it
    // to the top of the viewport and moving it to the bottom.
    "center-editor-window.threeStateToggle": true,
    "editor.minimap.enabled": false,
    // -----
    // calva
    "calva.statusColor.connectedStatusColor": "#B8860B",
    "calva.statusColor.typeStatusColor": "#119911",
    "calva.showCalvaSaysOnStart": false,
    "calva.highlight.bracketColors": [
        "#666666",
        "#5544EE",
        "#2265DC",
        "#00A89B",
        "#229900",
        "#999900",
        "#F57900",
        "#EE66E8",
        "#A020F0"
    ],
    "calva.highlight.matchedBracketStyle": {
        "backgroundColor": "#F0F0A1"
    },
    "calva.paredit.defaultKeyMap": "strict",
    "[clojure]": {
        "editor.wordSeparators": "`~!@#$%^&*()-=+[{]}\\|;:'\",.<>/?"
    },
    "scm.diffDecorationsGutterPattern": {
        "added": false,
        "modified": false
    },    
    "editor.tokenColorCustomizations": {
        "textMateRules": [
            {
                "scope": "entity.global.clojure",
                "settings": {
                    "foreground": "#912CEE"
                }
            },
            {
                "scope": "entity.name.variable.clojure",
                "settings": {
                    "foreground": "#326B6B"
                }
            }            
        ]
    },
    // -------
    // aceJump
    "aceJump.placeholder.backgroundColor": "#F0F0A1",
    "aceJump.placeholder.color": "#333",
    "aceJump.placeholder.upperCase": false,
    "aceJump.placeholder.border": "none",
    "aceJump.placeholder.fontWeight": "500",
    // -----
    // LaTeX
    "latex-workshop.latex.tools": [
        {
            "name": "latexmk",
            "command": "latexmk",
            "args": [
                "-e",
                "$pdflatex=q/lualatex %O -synctex=1 -interaction=nonstopmode -file-line-error %S/",
                "-outdir=%OUTDIR%",
                "-pdf",
                "%DOC%"
            ],
            "env": {}
        }
    ],
    "notebook.cellToolbarLocation": {
        "default": "right",
        "jupyter-notebook": "left"
    },
    "security.workspace.trust.untrustedFiles": "open",
    // -----------------
    // Clean whitespaces
    // or "Trim Trailing Whitespace" command.
    "files.trimTrailingWhitespace": false,
    // Wraps after 70 characters
    "rewrap.wrappingColumn": 70,
    "rewrap.wholeComment": true,
    // -----------------
    "[scala]": {
        "editor.suggestSelection": "first",
        "editor.formatOnPaste": false,
        "editor.formatOnType": false
    },
    "findWordAtCursor.showMessageIfNotFound": false,
    "editor.unicodeHighlight.ambiguousCharacters": false,    
    "code-runner.executorMap": {
        "javascript": "node",
        "lua": "lua"
    },
    "interactiveScala.interpreter": "sbt console",
    "interactiveScala.autoStart": false,
    "output.smartScroll.enabled": true,
    "editor.unicodeHighlight.allowedCharacters": {
        "Â ": true
    },
    "redhat.telemetry.enabled": false,
    "java.configuration.runtimes": [
        {
          "name": "JavaSE-1.8",
          "path": "/data/soft/java/jdk1.8.0_281",
        },
        {
          "name": "JavaSE-11",
          "path": "/data/soft/java/jdk-11.0.12",
        },
        {
            "name": "JavaSE-17",
            "path": "/data/soft/java/jdk-17.0.3",
            "default": true
          }
    ],
    "java.jdt.ls.java.home": "/data/soft/java/jdk-17.0.3/",
    "[java]": {
        "editor.defaultFormatter": "redhat.java"
    },
    "java.jdt.ls.vmargs": "-XX:+UseParallelGC -XX:GCTimeRatio=4 -XX:AdaptiveSizePolicyWeight=90 -Dsun.zip.disableMemoryMapping=true -Xmx2G -Xms100m -javaagent:\"/home/kostafey/.vscode/extensions/gabrielbb.vscode-lombok-1.0.1/server/lombok.jar\"",
    "[xml]": {
        "editor.defaultFormatter": "redhat.vscode-xml"
    }
}